  <div class="login-container text-c animated flipInX">
          <div>
              <h1 class="logo-badge text-whitesmoke"><span class="fa fa-user-circle"></span></h1>
          </div>
              <h3 class="text-whitesmoke">Welcome to </h3>
              <p class="text-whitesmoke">Sign up</p>
          <div class="container-content">
              <form class="margin-t" id="form" action="/loginPage" method="POST">
                <%if(invalid==true){%>
                <h2 id="exitEmail">Email already exist</h2>
                <%}else{%>
                    <%}%>
                  <div class="form-group">
                      <div id="dummeName"></div>
                      <input type="text" class="form-control" id="userName" placeholder="Enter Name" name="userName" required="true" >
                  </div>
                  <div class="form-group">
                    <input type="tel" class="form-control" id="userNumber" placeholder="Enter-Number" maxlength="10" minlength="10" name="userNumber" required="">
                  </div>
                  
                  <div class="form-group">
                    <input type="email" class="form-control" id="userEmail" placeholder="Enter-Email" name="userEmail" required="true">
                  </div>
                  <div class="form-group">
                      <div id="dummePass"></div>
                      <input type="password" class="form-control" id="userPass" name="userPass" placeholder="*****" required="true">
                  </div>

                  <p id="phone"></p>
                  <%if(empty==true){%>

                  <error id="alert" style="color:red">"* whitespace are not allowed input field"</error><br><br>
                  <%}else if(isNan==true){%>
                    <error id="alert" style="color:red">"* Is Not Number"</error><br><br>
                    <%}%>
                  <button type="submit" id="submit"  class="form-button button-l margin-b">Sign up</button>
  
                  <a class="text-darkyellow" href="#"><small>Forgot your password?</small></a>
                  <p class="text-whitesmoke text-center"><small>Do not have an account?</small></p>
                  <a class="text-darkyellow" href="#"><small>Sign Up</small></a>
              </form>
              <p class="margin-t text-whitesmoke"><small> Your Name &copy; 2018</small> </p>
          </div>
      </div>
