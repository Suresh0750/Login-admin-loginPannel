     <script>
        // document validation in jquary 
        $(document).ready(function(){
          $("#submit").clcik(function(){
            var inputvalue = $("#userNumber").val()

            if(inputvalue.length==10)
            {
              if(isNaN(inputvalue))
              {
                $("#phone").html("Not a number")

              }else{
                $("#phone").html("correct")
              }
            }else{

              $("#phone").html("Not of length 10")
            }
          })
          $.validator.setDefaults({
           
          });
          $("form").validate({
            rules:{
                userName:"required",
                userNumber:{
                  matches:"[0-9]+",
                  required:true,
                  minlength:10,
                  maxlength:10
                },
                userEmail:{
                    required:true,
                    email:true
                },
                userPass:"required"
            },
            message:{
                userName:"Please Enter The Name",
                userNumber:"Please Enter The Phone-Number",
                userEmail:"Please Enter The Email",
                userPass:"Please Enter The Pass"
            }

